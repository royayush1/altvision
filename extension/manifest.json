{
  "manifest_version": 3,
  "name": "AltVision - On-device AI Alt Text Assistant (Gemini Nano)",
  "version": "1.0.0",
  "description": "Generate WCAG-quality alt text for images on any page using Chrome's on-device AI. Optional translation.",

  "action": {
    "default_title": "AltVision",
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],

  "icons": {
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },

